<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    tools:ignore="HardcodedText">

    <TextView
        android:fontFamily="@font/sb"
        android:textColor="#000"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="QR Code for your goods"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:paddingBottom="20dp"
        android:textSize="30dp"/>

    <TextView
        android:fontFamily="@font/rg"
        android:textColor="#000"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Paste this QR code on all your goods while sending them via courier"
        android:textAlignment="center"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:paddingBottom="20dp"/>


    <ImageView
        android:id="@+id/imageViewResult"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="335dp" />

    <Button
        android:layout_marginTop="10dp"
        android:textColor="#f1f1f1"
        android:background="@drawable/cardlayout"
        android:id="@+id/home"
        android:fontFamily="@font/sb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Home"
        android:layout_marginLeft="150dp"/>

</LinearLayout>