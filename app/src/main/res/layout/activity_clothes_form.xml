<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".clothes_form">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/Clothes"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:height="55dp"
            android:background="@color/colorPrimary"
            android:text="Clothes"
            android:textAlignment="center"
            android:textSize="35dp"
            android:textColor="#fefefe"
            android:fontFamily="@font/sb"
            android:layout_margin="10dp"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="0dp" />

        <TextView
            android:id="@+id/Male"
            android:layout_width="394dp"
            android:layout_height="36dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="35dp"
            android:layout_marginEnd="10dp"

            android:paddingLeft="20dp"
            android:text="Male"

            android:textSize="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Clothes" />

        <TextView
            android:id="@+id/size_m"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="35dp"
            android:width="80dp"
            android:fontFamily="@font/rg"
            android:text="Size"
            android:textSize="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Male" />

        <TextView
            android:id="@+id/quantity_text_m"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="40dp"
            android:width="80dp"
            android:text="Quantity"
            android:textSize="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/size_m" />

        <TextView
            android:id="@+id/S_text_m"
            android:layout_width="16dp"
            android:layout_height="26dp"
            android:layout_marginStart="58dp"
            android:layout_marginTop="35dp"
            android:fontFamily="@font/sb"
            android:text="S"
            android:textColor="#000"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/size_m"
            app:layout_constraintTop_toBottomOf="@+id/Male" />

        <TextView
            android:id="@+id/L_text_m"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="68dp"
            android:layout_marginTop="35dp"
            android:text="L"
            android:textSize="20dp"
            android:fontFamily="@font/rg"
            android:textColor="#000"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/S_text_m"
            app:layout_constraintTop_toBottomOf="@+id/Male" />

        <TextView
            android:id="@+id/XL_text_m"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="68dp"
            android:layout_marginTop="35dp"
            android:text="XL"
            android:textSize="20dp"
            android:fontFamily="@font/rg"
            android:textColor="#000"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/L_text_m"
            app:layout_constraintTop_toBottomOf="@+id/Male" />

        <EditText
            android:id="@+id/male_s"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginStart="45dp"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:inputType="numberDecimal"
            app:layout_constraintStart_toEndOf="@+id/quantity_text_m"
            app:layout_constraintTop_toBottomOf="@+id/XL_text_m" />

        <EditText
            android:id="@+id/male_l"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginStart="37dp"
            android:layout_marginTop="23dp"
            android:ems="10"
            android:inputType="numberDecimal"
            app:layout_constraintStart_toEndOf="@+id/male_s"
            app:layout_constraintTop_toBottomOf="@+id/L_text_m" />

        <EditText
            android:id="@+id/male_xl"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginStart="37dp"
            android:layout_marginTop="23dp"
            android:ems="10"
            android:inputType="numberDecimal"
            app:layout_constraintStart_toEndOf="@+id/male_l"
            app:layout_constraintTop_toBottomOf="@+id/XL_text_m" />

        /*Female*/

        <TextView
            android:id="@+id/Female"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="10dp"
            android:paddingLeft="20dp"
            android:text="Female"
            android:textSize="25dp"
            android:fontFamily="@font/sb"
            android:textStyle="bold"
            android:textColor="#000"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/male_l" />

        <TextView
            android:id="@+id/size_f"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="35dp"
            android:width="80dp"
            android:text="Size"
            android:textSize="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Female" />

        <TextView
            android:id="@+id/quantity_text_f"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="40dp"
            android:width="80dp"
            android:text="Quantity"
            android:textSize="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/size_f" />

        <TextView
            android:id="@+id/S_text_f"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="58dp"
            android:layout_marginTop="35dp"
            android:text="S"
            android:textSize="20dp"
            android:fontFamily="@font/rg"
            android:textColor="#000"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/size_f"
            app:layout_constraintTop_toBottomOf="@+id/Female" />

        <TextView
            android:id="@+id/L_text_f"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="68dp"
            android:layout_marginTop="35dp"
            android:text="L"
            android:textSize="20dp"
            android:fontFamily="@font/rg"
            android:textColor="#000"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/S_text_f"
            app:layout_constraintTop_toBottomOf="@+id/Female" />

        <TextView
            android:id="@+id/XL_text_f"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="68dp"
            android:layout_marginTop="35dp"
            android:text="XL"
            android:textSize="20dp"
            android:fontFamily="@font/rg"
            android:textColor="#000"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/L_text_f"
            app:layout_constraintTop_toBottomOf="@+id/Female" />

        <EditText
            android:id="@+id/female_s"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginStart="45dp"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:inputType="numberDecimal"
            app:layout_constraintStart_toEndOf="@+id/quantity_text_f"
            app:layout_constraintTop_toBottomOf="@+id/XL_text_f" />

        <EditText
            android:id="@+id/female_l"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginStart="37dp"
            android:layout_marginTop="23dp"
            android:ems="10"
            android:inputType="numberDecimal"
            app:layout_constraintStart_toEndOf="@+id/female_s"
            app:layout_constraintTop_toBottomOf="@+id/L_text_f" />

        <EditText
            android:id="@+id/female_xl"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginStart="37dp"
            android:layout_marginTop="23dp"
            android:ems="10"
            android:inputType="numberDecimal"
            app:layout_constraintStart_toEndOf="@+id/female_l"
            app:layout_constraintTop_toBottomOf="@+id/XL_text_f" />

        /* Children */

        <TextView
            android:id="@+id/Children"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="10dp"
            android:paddingLeft="20dp"
            android:text="Children"
            android:fontFamily="@font/sb"
            android:textStyle="bold"
            android:textColor="#000"
            android:textSize="25dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/female_l" />

        <TextView
            android:id="@+id/size_c"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="35dp"
            android:width="80dp"
            android:text="Size"
            android:textSize="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Children" />

        <TextView
            android:id="@+id/quantity_text_c"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="40dp"
            android:width="80dp"
            android:text="Quantity"
            android:textSize="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/size_c" />

        <TextView
            android:id="@+id/S_text_c"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="58dp"
            android:layout_marginTop="35dp"
            android:text="S"
            android:textSize="20dp"
            android:fontFamily="@font/rg"
            android:textColor="#000"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/size_c"
            app:layout_constraintTop_toBottomOf="@+id/Children" />

        <TextView
            android:id="@+id/L_text_c"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="68dp"
            android:layout_marginTop="35dp"
            android:text="L"
            android:textSize="20dp"
            android:fontFamily="@font/rg"
            android:textColor="#000"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/S_text_c"
            app:layout_constraintTop_toBottomOf="@+id/Children" />

        <TextView
            android:id="@+id/XL_text_c"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="68dp"
            android:layout_marginTop="35dp"
            android:text="XL"
            android:textSize="20dp"
            android:fontFamily="@font/rg"
            android:textColor="#000"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/L_text_c"
            app:layout_constraintTop_toBottomOf="@+id/Children" />

        <EditText
            android:id="@+id/child_s"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginStart="45dp"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:inputType="numberDecimal"
            app:layout_constraintStart_toEndOf="@+id/quantity_text_c"
            app:layout_constraintTop_toBottomOf="@+id/XL_text_c" />

        <EditText
            android:id="@+id/child_l"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginStart="37dp"
            android:layout_marginTop="23dp"
            android:ems="10"
            android:inputType="numberDecimal"
            app:layout_constraintStart_toEndOf="@+id/child_s"
            app:layout_constraintTop_toBottomOf="@+id/L_text_c" />

        <EditText
            android:id="@+id/child_xl"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginStart="37dp"
            android:layout_marginTop="23dp"
            android:ems="10"
            android:inputType="numberDecimal"
            app:layout_constraintStart_toEndOf="@+id/child_l"
            app:layout_constraintTop_toBottomOf="@+id/XL_text_c" />

        /*Infants*/

        <TextView
            android:id="@+id/Infants"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="10dp"
            android:paddingLeft="20dp"
            android:fontFamily="@font/sb"
            android:textStyle="bold"
            android:textColor="#000"
            android:text="Infants"
            android:textSize="25dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/child_l" />

        <TextView
            android:id="@+id/quantity_text_i"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="40dp"
            android:width="80dp"
            android:text="Quantity"
            android:textSize="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Infants" />

        <EditText
            android:id="@+id/infant"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginStart="37dp"
            android:layout_marginTop="23dp"
            android:ems="10"
            android:inputType="numberDecimal"
            app:layout_constraintStart_toEndOf="@+id/quantity_text_i"
            app:layout_constraintTop_toBottomOf="@+id/Infants" />

        <Button
            android:id="@+id/submit"
            android:layout_width="132dp"
            android:layout_height="50dp"
            android:layout_marginStart="132dp"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/cardlayout"
            android:text="Submit"
            android:textSize="20dp"
            android:fontFamily="@font/sb"
            android:textColor="#fefefe"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/infant" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>