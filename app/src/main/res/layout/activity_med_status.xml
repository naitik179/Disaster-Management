<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".med_status">

    <TextView
        android:id="@+id/Medicines"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:height="55dp"
        android:background="#00BCD4"
        android:text="Medicines"
        android:textAlignment="center"
        android:textSize="35dp"
        android:textStyle="bold|italic"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/Cholera"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="40dp"
        android:paddingLeft="20dp"
        android:text="CHOLERA"
        android:textSize="25dp"
        app:layout_constraintTop_toBottomOf="@+id/Medicines" />

    <TextView
        android:id="@+id/Ch_q"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="25dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Cholera" />

    <TextView
        android:id="@+id/First_Aid"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="40dp"
        android:paddingLeft="20dp"
        android:text="FIRST AID"
        android:textSize="25dp"
        app:layout_constraintTop_toBottomOf="@+id/Ch_q" />

    <TextView
        android:id="@+id/fa_q"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="25dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/First_Aid" />

    <TextView
        android:id="@+id/Jaundice"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="40dp"
        android:paddingLeft="20dp"
        android:text="JAUNDICE"
        android:textSize="25dp"
        app:layout_constraintTop_toBottomOf="@+id/fa_q" />

    <TextView
        android:id="@+id/j_q"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="25dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Jaundice" />


</androidx.constraintlayout.widget.ConstraintLayout>