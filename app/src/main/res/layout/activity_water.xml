<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".water">

    <TextView
        android:id="@+id/waterText"
        android:layout_width="86dp"
        android:layout_height="38dp"
        android:layout_marginStart="38dp"
        android:layout_marginTop="332dp"
        android:layout_marginEnd="18dp"
        android:layout_marginBottom="380dp"
        android:fontFamily="@font/sb"
        android:textAlignment="center"
        android:text="Quantity"
        android:textColor="#000"
        android:textSize="20dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/waterQuantity"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/waterQuantity"
        android:layout_width="140dp"
        android:layout_height="56dp"
        android:layout_marginStart="19dp"
        android:layout_marginTop="316dp"
        android:layout_marginEnd="18dp"
        android:ems="10"
        android:inputType="number"
        android:hint="Enter quantity in litres"
        app:layout_constraintEnd_toStartOf="@+id/litres"
        app:layout_constraintStart_toEndOf="@+id/waterText"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/litres"
        android:layout_width="69dp"
        android:layout_height="27dp"
        android:layout_marginStart="17dp"
        android:layout_marginTop="333dp"
        android:layout_marginEnd="52dp"
        android:layout_marginBottom="379dp"
        android:text="(in Litres)"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/waterQuantity"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/applyWater"
        android:layout_width="198dp"
        android:layout_height="58dp"
        android:layout_marginStart="106dp"
        android:layout_marginTop="108dp"
        android:layout_marginEnd="107dp"
        android:layout_marginBottom="210dp"
        android:text="Submit"
        android:textColor="#fefefe"
        android:fontFamily="@font/sb"
        android:textSize="25dp"
        android:background="@drawable/cardlayout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/waterQuantity" />
</androidx.constraintlayout.widget.ConstraintLayout>