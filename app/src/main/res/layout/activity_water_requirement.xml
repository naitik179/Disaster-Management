<?xml version="1.0" encoding="utf-8"?>




<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".water_status">

    <TextView
        android:id="@+id/textWater"
        android:layout_width="138dp"
        android:layout_height="32dp"
        android:layout_marginStart="43dp"
        android:layout_marginTop="250dp"
        android:layout_marginEnd="37dp"
        android:layout_marginBottom="376dp"
        android:text="Water Quantity Required"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/display"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/waterRequired"
        android:layout_width="89dp"
        android:layout_height="31dp"
        android:layout_marginStart="37dp"
        android:layout_marginTop="250dp"
        android:layout_marginEnd="104dp"
        android:layout_marginBottom="376dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView3"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/negativeQuantity5"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="29dp"
        android:text="(Negative Quantity Signifies The Extra Amount Of Requested Items At Present)"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/waterRequired" />

    <EditText
        android:id="@+id/waterDonateQuantity"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="360dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="180dp"
        android:layout_marginBottom="300dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.636"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/negativeQuantity5"
        app:layout_constraintVertical_bias="0.815" />

    <Button
        android:id="@+id/DonateWater"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="140dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="141dp"
        android:layout_marginBottom="214dp"
        android:background="@drawable/cardlayout"
        android:text="Donate Water"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/waterDonateQuantity" />

    <TextView
        android:id="@+id/donate"
        android:layout_width="138dp"
        android:layout_height="32dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="29dp"
        android:layout_marginEnd="36dp"
        android:layout_marginBottom="50dp"
        android:text="Donate Water Here"
        app:layout_constraintBottom_toTopOf="@+id/DonateWater"
        app:layout_constraintEnd_toStartOf="@+id/waterDonateQuantity"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/negativeQuantity5" />
</androidx.constraintlayout.widget.ConstraintLayout>