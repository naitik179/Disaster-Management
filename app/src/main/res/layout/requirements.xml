<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Spinner
        android:id="@+id/requirementsspinner"
        android:layout_width="292dp"
        android:layout_height="47dp"
        android:layout_marginStart="59dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/requirementsheading" />

    <TextView
        android:id="@+id/therrequirements"
        android:layout_width="246dp"
        android:layout_height="30dp"
        android:layout_marginStart="105dp"
        android:layout_marginTop="71dp"
        android:layout_marginEnd="106dp"
        android:fontFamily="@font/sb"
        android:textColor="#000"
        android:text="Other Requirements"
        android:textAlignment="center"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/quantity" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/otherreq"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="50dp"
        android:ems="10"
        android:textColorHint="#000"
        android:hint="Other Requirements"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/therrequirements" />

    <Button
        android:id="@+id/requirementssend"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="86dp"
        android:layout_marginTop="75dp"
        android:layout_marginEnd="87dp"
        android:text="Apply "
        android:textColor="#f1f1f1"
        android:fontFamily="@font/sb"
        android:background="@drawable/cardlayout"
        android:elevation="20dp"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/otherreq" />

    <TextView
        android:id="@+id/requirementsheading"
        android:layout_width="0dp"
        android:layout_height="42dp"
        android:layout_marginStart="3dp"
        android:layout_marginTop="92dp"
        android:layout_marginEnd="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:fontFamily="@font/sb"
        android:textColor="#000"
        android:text="Apply For Relief Material"
        android:textAlignment="center"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/quantity"
        android:layout_width="169dp"
        android:layout_height="51dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="30dp"
        android:ems="10"
        android:hint="Quantity"
        android:fontFamily="@font/rg"
        android:textColorHint="#000"
        android:inputType="number"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/quant"
        app:layout_constraintTop_toBottomOf="@+id/requirementsspinner" />

    <TextView
        android:id="@+id/quant"
        android:layout_width="156dp"
        android:layout_height="37dp"
        android:layout_marginStart="31dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="8dp"
        android:paddingTop="5dp"
        android:text="Quantity"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/quantity"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/requirementsspinner" />


</androidx.constraintlayout.widget.ConstraintLayout>